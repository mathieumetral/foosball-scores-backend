{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["@types/node"],
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["./app/*"],
      "@data/*": ["./data/*"],
      "@features/*": ["./features/*"],
      "@lib/*": ["./lib/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
